<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= it.title %></title>
  <link rel="stylesheet" href="<%= it.assets['dashboard.css'] %>">
</head>
<body>
  <header>
    <div class="header-content">
      <h1>Dashboard</h1>
      <div class="user-badge" data-action="hello"><%= it.user.name %></div>
    </div>
  </header>
  
  <div class="container">
    <div class="grid">
      <div class="card">
        <h2>User Information</h2>
        <div class="stat">
          <span class="stat-label">ID</span>
          <span class="stat-value"><%= it.user.id %></span>
        </div>
        <div class="stat">
          <span class="stat-label">Name</span>
          <span class="stat-value"><%= it.user.name %></span>
        </div>
        <% if (it.user.domain) { %>
        <div class="stat">
          <span class="stat-label">Domain</span>
          <span class="stat-value"><%= it.user.domain %></span>
        </div>
        <% } %>
        <% if (it.user.subdomain) { %>
        <div class="stat">
          <span class="stat-label">Subdomain</span>
          <span class="stat-value"><%= it.user.subdomain %></span>
        </div>
        <% } %>
      </div>
      
      <div class="card">
        <h2>Enabled Plugins</h2>
        <% it.user.plugins.forEach((plugin) => { %>
        <div class="stat">
          <span class="stat-label"><%= plugin %></span>
          <span class="stat-value">âœ“ Active</span>
        </div>
        <% }) %>
      </div>
      
      <div class="card">
        <h2>Database Configuration</h2>
        <% if (it.user.config.database) { %>
        <div class="stat">
          <span class="stat-label">Type</span>
          <span class="stat-value"><%= it.user.config.database.type %></span>
        </div>
        <div class="stat">
          <span class="stat-label">Status</span>
          <span class="stat-value">Connected</span>
        </div>
        <% } else { %>
        <div class="stat">
          <span class="stat-label">Status</span>
          <span class="stat-value">Not Configured</span>
        </div>
        <% } %>
      </div>
    </div>
    
    <div class="card">
      <h2>Quick Actions</h2>
      <div style="display: flex; gap: 1rem; flex-wrap: wrap; margin-top: 1rem;">
        <a href="/blog" class="btn">View Blog</a>
        <a href="/api/analytics/stats" class="btn">Analytics</a>
        <button class="btn" onclick="testWorker()">Test Worker</button>
      </div>
    </div>
    
    <div class="card">
      <h2>Configuration</h2>
      <pre class="config"><%= JSON.stringify(it.user.config, null, 2) %></pre>
    </div>
  </div>
  
  <script>
    async function testWorker() {
      try {
        const response = await fetch('/api/dispatch/blog/process-markdown', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            markdown: '# Test\n\nThis is a **test** markdown.'
          })
        });
        
        const result = await response.json();
        alert('Worker dispatched! Job ID: ' + result.jobId);
      } catch (error) {
        alert('Error: ' + error.message);
      }
    }
  </script>
<script type="module">
  import { Dashboard } from "<%= it.assets['dashboard.js'] %>";

  const dashboard = new Dashboard(document);
  dashboard.init();
</script>
</body>
</html>